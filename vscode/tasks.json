{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: g++ 生成活动文件",
            "command": "/usr/bin/mpic++",
            "args": [
                "-g",
                "${fileDirname}/*.cpp",
                "-o",
                "${fileDirname}/main",
                "-I/usr/local/dealii-8.1.0/include",
                "-I/usr/local/dealii-8.1.0/include/deal.II",
                "-I/usr/local/include/boost",
                "-I/usr/include/trilinos",
                "-D__SERIALIZATION__",
                "-DMULTITHREAD",
                "-pthread",
                "-fPIC",
                "-std=c++11",
                "-ftemplate-depth-256",
                "-lAFEPack",
                "-ldeal_II",
                "-lm",
                "-ldl"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}
