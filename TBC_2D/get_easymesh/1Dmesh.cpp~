#include <iostream>
#include <vector>
#include <string>
#include <fstream>
#include <sstream>
#include <cassert>
#include <stdlib.h>
#include <cmath>
using namespace std;

int main(int argc,char *argv[])
{
	// calculation space [0,L] and dx = h  
	double L = atof(argv[1]);
	double h = atof(argv[2]);
	// node number
	int n = floor(L/h+1);

	ofstream meshfile("D.mesh");
	//  the coordinate
	meshfile << n <<endl;
	for(int i=0;i<n;i++)
	  meshfile << i*h <<endl;
	meshfile <<endl;
	// geometry 0-diM
	meshfile << n << endl;
	for(int i=0;i<n;i++){
		meshfile << i <<endl;
		meshfile << 1 << "\t" << i <<endl;
		meshfile << 1 << "\t" << i <<endl;
		if(i==0 || i == n-1)
			meshfile << 1 <<endl;
		else
			meshfile << 0 <<endl;
	}
	meshfile <<endl;
	// geometry 1-dim
	meshfile << n-1 <<endl;
	for(int i=1;i<n-1;i++){
		meshfile << i <<endl;
		meshfile << 2 << "\t" << i << " " << i+1 <<endl;
		meshfile << 2 << "\t" << i << " " << i+1 <<endl;
		meshfile << 0 <<endl;
	}
	meshfile << 0 <<endl;
	meshfile << 2 << "\t" << 0 << " " << 1 <<endl;
	meshfile << 2 << "\t" << 0 << " " << 1 <<endl;
	meshfile << 0 << endl;
	return 0;
}

